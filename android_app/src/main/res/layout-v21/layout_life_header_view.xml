<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="250.0dip"
    android:orientation="vertical" >

    <com.haier.cabinet.customer.view.LifeSlideShowView
        android:id="@+id/slideshowView"
        android:layout_width="match_parent"
        android:layout_height="166.0dp" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="86dp"
        android:layout_gravity="bottom">
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white"
            android:layout_gravity="bottom"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="2" >

            <TextView
                android:id="@+id/scan_button"
                android:layout_width="1.0dip"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:layout_weight="1"
                android:drawableTop="@drawable/ic_scan"
                android:drawablePadding="5dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="@string/open_box"
                android:textSize="13sp"
                android:textColor="@color/common_black_text" />

            <View
                android:layout_width="1.0dip"
                android:layout_height="wrap_content"
                android:background="#dddddd"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:visibility="gone"
                />
            <TextView
                android:id="@+id/mail_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_weight="1"
                android:clickable="true"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:drawableTop="@drawable/ic_send_mail"
                android:drawablePadding="5dp"
                android:gravity="center"
                android:text="我要寄件"
                android:textSize="13sp"
                android:textColor="@color/common_black_text" />
            <View
                android:layout_width="1.0dip"
                android:layout_height="match_parent"
                android:background="#dddddd"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:visibility="gone"
                />

        </LinearLayout>

        </FrameLayout>

</LinearLayout>
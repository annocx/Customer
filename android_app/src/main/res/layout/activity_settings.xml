<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg"
    android:orientation="vertical" >

    <!-- title bar -->

    <include
        android:id="@+id/title_bar"
        layout="@layout/title_bar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/app_bg"
        android:scrollbarStyle="outsideOverlay" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:gravity="center_vertical"
                android:orientation="vertical" >

                <RelativeLayout
                    android:id="@+id/modify_pwd_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/selector_white_preferences_item"
                    android:clickable="true"
                    android:paddingBottom="15dip"
                    android:paddingTop="15dip" >

                    <TextView
                        android:id="@+id/modify_pwd_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/selector_white_preferences_item"
                        android:drawableLeft="@drawable/ic_password"
                        android:drawablePadding="5dp"
                        android:gravity="center_vertical"
                        android:paddingLeft="20dip"
                        android:paddingRight="25dip"
                        android:text="@string/user_modify_pwd"
                        android:textColor="#353535"
                        android:textSize="14sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        android:contentDescription="@null"
                        android:paddingRight="15dip"
                        android:src="@drawable/right_arrow" />
                </RelativeLayout>

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1px"
                    android:background="#dadada" />

                

                <RelativeLayout
                    android:id="@+id/questionnaire_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/selector_white_preferences_item"
                    android:clickable="true"
                    android:paddingBottom="15dip"
                    android:paddingTop="15dip" >

                    <TextView
                        android:id="@+id/questionnaire_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/selector_white_preferences_item"
                        android:drawableLeft="@drawable/ic_questionnaire"
                        android:drawablePadding="5dp"
                        android:gravity="center_vertical"
                        android:paddingLeft="20dip"
                        android:paddingRight="25dip"
                        android:text="@string/questionnaire"
                        android:textColor="#353535"
                        android:textSize="14sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        android:contentDescription="@null"
                        android:paddingRight="15dip"
                        android:src="@drawable/right_arrow" />
                </RelativeLayout>

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1px"
                    android:background="#dadada" />

                <RelativeLayout
                    android:id="@+id/feedback_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/selector_white_preferences_item"
                    android:clickable="true"
                    android:paddingBottom="15dip"
                    android:paddingTop="15dip" >

                    <TextView
                        android:id="@+id/feedback_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/selector_white_preferences_item"
                        android:drawableLeft="@drawable/ic_feedback"
                        android:drawablePadding="5dp"
                        android:gravity="center_vertical"
                        android:paddingLeft="20dip"
                        android:paddingRight="25dip"
                        android:text="@string/user_feedback"
                        android:textColor="#353535"
                        android:textSize="14sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        android:contentDescription="@null"
                        android:paddingRight="15dip"
                        android:src="@drawable/right_arrow" />
                </RelativeLayout>

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1px"
                    android:background="#dadada" />

                <RelativeLayout
                    android:id="@+id/about_us_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/selector_white_preferences_item"
                    android:clickable="true"
                    android:paddingBottom="15dip"
                    android:paddingTop="15dip" >

                    <TextView
                        android:id="@+id/about_us_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_about_us"
                        android:drawablePadding="5dp"
                        android:gravity="center_vertical"
                        android:paddingLeft="20dip"
                        android:paddingRight="25dip"
                        android:text="@string/about_us"
                        android:textColor="#353535"
                        android:textSize="14sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        android:contentDescription="@null"
                        android:paddingRight="15dip"
                        android:src="@drawable/right_arrow" />
                </RelativeLayout>

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1px"
                    android:background="#dadada" />

                <RelativeLayout
                    android:id="@+id/update_app_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/selector_white_preferences_item"
                    android:clickable="true" >

                    <TextView
                        android:id="@+id/update_app_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_update_version"
                        android:drawablePadding="5dp"
                        android:gravity="center_vertical"
                        android:paddingBottom="15dip"
                        android:paddingLeft="20dip"
                        android:paddingRight="25dip"
                        android:paddingTop="15dip"
                        android:text="@string/update_app"
                        android:textColor="#353535"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/app_version_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@+id/right_arrow_image2"
                        android:gravity="center_vertical"
                        android:paddingBottom="15dip"
                        android:paddingLeft="20dip"
                        android:paddingRight="5dip"
                        android:paddingTop="15dip"
                        android:textColor="#353535"
                        android:textSize="14sp" />

                    <ImageView
                        android:id="@+id/right_arrow_image2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        android:contentDescription="@null"
                        android:paddingRight="15dip"
                        android:src="@drawable/right_arrow" />
                </RelativeLayout>

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/notification_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@drawable/selector_white_preferences_item"
                android:clickable="true" >

                <TextView
                    android:id="@+id/notification_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_message_notafication"
                    android:drawablePadding="5dp"
                    android:gravity="center_vertical"
                    android:paddingBottom="15dip"
                    android:paddingLeft="20dip"
                    android:paddingRight="25dip"
                    android:paddingTop="15dip"
                    android:text="@string/notification"
                    android:textColor="#353535"
                    android:textSize="14sp" />

                <ToggleButton
                    android:id="@+id/right_arrow_image3"
                    android:layout_width="40dp"
                    android:layout_height="23dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:background="@drawable/btn_toggle_ios"
                    android:button="@null"
                    android:text=""
                    android:textOff=""
                    android:textOn=""
                    android:layout_marginRight="20dp"
                    android:contentDescription="@null" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/logout_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:background="@android:color/white"
                android:clickable="true"
                android:gravity="center_vertical"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/logout_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/selector_white_preferences_item"
                    android:gravity="center"
                    android:paddingBottom="15dip"
                    android:paddingLeft="20dip"
                    android:paddingRight="25dip"
                    android:paddingTop="15dip"
                    android:text="@string/user_logout"
                    android:textColor="#f13f22"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>